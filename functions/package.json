    "firebase": "^5.9.3",
    "firebase-admin": "7.0.0",
    "firebase-functions": "^3.3.0",
    "google-apis": "^1.0.0",
    "googleapis": "^36.0.0",
    "stripe": "^6.28.0",
    "unirest": "^0.5.1"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0"
